<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#8A2BE2" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="200dp" />
            <solid android:color="#8A2BE2" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:bottom="70dp"
        android:top="200dp">
        <shape android:shape="line">
            <solid android:color="@color/colorWhite" />
            <stroke android:width="1dp"
                android:dashWidth="10px"
                android:dashGap="10px"
                android:color="@color/colorWhite" />
        </shape>
    </item>
    <item
        android:bottom="70dp"
        android:left="-10dp"
        android:right="340dp"
        android:top="200dp" android:color="@color/white">
        <shape android:shape="oval" android:color="@color/white">
            <size
                android:width="3dp"
                android:height="3dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp"  android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="70dp"
        android:left="340dp"
        android:right="-10dp"
        android:top="200dp" android:color="@color/white">
        <shape android:shape="oval" android:strokeColor="@color/colorWhite" >
            <size
                android:width="3dp"
                android:height="3dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
</layer-list>